{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch XMD",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceFolder}/xmdparser/src/index.ts",
            "outFiles": [
                "${workspaceRoot}/lib/xmdparser.js"
            ],
            "sourceMaps": true,
            "args": [
                "--src",
                "./examples/simple.md",
                "--debug",
                "--template",
                "tex_doc"
            ],
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        }
    ]
}